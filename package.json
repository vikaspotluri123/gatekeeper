{
  "name": "@potluri/gatekeeper",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "lint": "xo --ignore docs",
    "typecheck": "tsc",
    "dev": "nodemon index.js -w lib",
    "test": "NODE_ENV=test mocha test/**/*",
    "test:coverage": "c8 yarn test"
  },
  "engines": {
    "node": ">= 12.13.0"
  },
  "dependencies": {
    "connect-session-knex": "^3.0.1",
    "cookie": "^0.5.0",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "knex": "^2.4.2",
    "lodash.get": "^4.4.2",
    "matcher": "^5.0.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "c8": "^7.14.0",
    "chai": "^4.3.7",
    "got": "^13.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "typescript": "^5.1.3",
    "xo": "^0.54.2"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.6"
  },
  "xo": {
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/string-content": "off",
      "func-name-matching": "off",
      "unicorn/prefer-spread": "off",
      "unicorn/prefer-module": "off"
    },
    "overrides": [
      {
        "files": [
          "test/**/*"
        ],
        "env": [
          "mocha"
        ],
        "rules": {
          "no-unused-expressions": "off",
          "func-names": "off",
          "prefer-arrow-callback": "off"
        }
      }
    ]
  }
}
